FROM alpine:3.11.0

RUN apk update && \
    apk add build-base python3 python3-dev libffi-dev libressl-dev && \
    ln -sf /usr/bin/python3 /usr/bin/python && \
    ln -sf /usr/bin/pip3 usr/bin/pip && \
    pip install --upgrade pip

WORKDIR app/
COPY shhh shhh
COPY ./gunicorn/gunicorn.conf.py .

RUN mkdir -p /var/log/celery/ /var/run/celery/
RUN addgroup app && \
    adduser --disabled-password --gecos "" --ingroup app --no-create-home app && \
    chown app:app /var/run/celery/ && \
    chown app:app /var/log/celery/

COPY requirements.txt .
COPY ./gunicorn/requirements-gunicorn.txt .
RUN pip install -r requirements.txt -r requirements-gunicorn.txt

ENV FLASK_APP=shhh

USER app
