# dev-docker env
# env file for local development purposes only
# please do not use this env file in production

FLASK_ENV=dev-docker
FLASK_DEBUG=1

POSTGRES_HOST=db
POSTGRES_USER=shhh
POSTGRES_PASSWORD=dummypassword
POSTGRES_PORT=5432
POSTGRES_DB=shhh

PGDATA=/data/postgres

